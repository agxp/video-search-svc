apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: video-search
spec:
  replicas: 1
  selector:
    matchLabels:
      app: video-search
  template:
    metadata:
      labels:
        app: video-search
      annotations:
        prometheus.io/scrape: "true"
    spec:
        containers:
        - name: video-search
          image: video_search
          imagePullPolicy: Never
          env:
          - name: MINIO_URL
            value: "192.168.1.74:30366"
          - name: MINIO_ACCESS_KEY
            value: "minio"
          - name: MINIO_SECRET_KEY
            value: "minio123"
          - name: PG_HOST
            value: "postgres-postgresql"
          - name: PG_USER
            value: "postgres"
          - name: PG_PASSWORD
            value: "postgres123"
          - name: UPDATED_AT
            value: "{{ UPDATED_AT }}"
          - name:  MICRO_REGISTRY
            value:  kubernetes
          - name: MICRO_SELECTOR
            value: cache
          - name: MICRO_SERVER_ADDRESS
            value: 0.0.0.0:8080
          - name: MICRO_BROKER_ADDRESS
            value: 0.0.0.0:10001
          - name: JAEGER_SERVICE_NAME
            value: video-search-svc
          - name: JAEGER_AGENT_HOST
            value: jaeger-agent
          - name: JAEGER_SAMPLER_TYPE
            value: const
          - name: JAEGER_SAMPLER_PARAM
            value: "1"
          - name: JAEGER_REPORTER_LOG_SPANS
            value: "true"
          - name: OPENTRACING_METRICS_EXPORTER_HTTP_PATH
            value: "/metrics"
          ports:
          - name: search-port
            containerPort: 8080
          - name: prometheus
            containerPort: 9090
